<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_common_toolbar_with_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewComments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/editTextComment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        tools:listitem="@layout/engage_row_comments" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewScrollUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewComments"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_scroll_up" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextComment"
        style="@style/editTextStroke"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/screen_space"
        android:layout_marginEnd="@dimen/screen_space"
        android:layout_marginBottom="@dimen/dp_16"
        android:hint="@string/engage_comments_hint_type_comment_here"
        android:imeOptions="actionDone"
        android:maxLines="2"
        android:paddingEnd="@dimen/dp_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewComments"
        app:layout_constraintStart_toStartOf="@id/recyclerViewComments"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSend"
        style="@style/TextView.Bold.sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="?selectableItemBackground"
        android:padding="@dimen/dp_4"
        android:text="@string/engage_comments_label_send"
        android:textColor="@color/textBlack1"
        app:layout_constraintBottom_toBottomOf="@id/editTextComment"
        app:layout_constraintEnd_toEndOf="@id/editTextComment"
        app:layout_constraintTop_toTopOf="@id/editTextComment" />

</androidx.constraintlayout.widget.ConstraintLayout>