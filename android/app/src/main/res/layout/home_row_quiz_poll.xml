<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDoctorSays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewBg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/bg_rounded_rect_doctor_says"
            android:elevation="@dimen/dp_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="2.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_dots_overlay_doctor_says" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewDoctorIcon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:elevation="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@id/imageViewBg"
            app:layout_constraintEnd_toEndOf="@id/imageViewBg"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.24"
            app:srcCompat="@drawable/ic_quiz_poll_image" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_8"
            android:elevation="@dimen/dp_4"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/imageViewBg"
            app:layout_constraintEnd_toStartOf="@id/imageViewDoctorIcon"
            app:layout_constraintStart_toStartOf="@id/imageViewBg"
            app:layout_constraintTop_toTopOf="@id/imageViewBg"
            app:layout_constraintVertical_bias="0">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTitle"
                style="@style/TextView.SemiBold.sp_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dp_4"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Poll Cardasdsad sad sa sad sadsa sadasd sad saad s"
                android:textColor="@color/textBlack1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDescription"
                style="@style/TextView.Regular.sp_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:alpha="0.9"
                android:elevation="@dimen/dp_4"
                android:ellipsize="end"
                android:lines="3"
                android:maxLines="3"
                android:text="A castor oil pack can be made easily at home works wonderfully in drawing toxins out of the body. A castor oil pack can be made easily at home works wonderfully in drawing toxins out of the body. A castor oil pack can be made easily at home works wonderfully in drawing toxins out of the body. A castor oil pack can be made easily at home works wonderfully in drawing toxins out of the body."
                android:textColor="@color/textBlack1"
                app:layout_constraintBottom_toTopOf="@id/buttonStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonStart"
                style="@style/buttonSolidSmallRadius7"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_8"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:text="Start Poll"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>