<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_color"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_common_toolbar_with_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/layoutProceedPayment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_screen_color"
            android:paddingBottom="@dimen/dp_20">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/screen_space" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/screen_space" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelSummary"
                style="@style/TextView.Bold.sp_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/payment_bcp_my_device_label_summary"
                android:textColor="@color/textBlack9"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutOrderSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:elevation="@dimen/dp_2"
                android:background="@drawable/bg_common_rounded_rect_12"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelSummary">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPatientName"
                    style="@style/TextView.SemiBold.sp_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_20"
                    tools:text="@string/labtest_order_review_label_patient_name"
                    android:textColor="@color/textBlack1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewAddress"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="@id/textViewPatientName"
                    app:layout_constraintTop_toBottomOf="@id/textViewPatientName"
                    app:srcCompat="@drawable/ic_address_new" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPickupFromAddress"
                    style="@style/TextView.Regular.sp_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_11"
                    tools:text="Address"
                    android:textColor="@color/gray2"
                    app:layout_constraintEnd_toEndOf="@id/textViewPatientName"
                    app:layout_constraintStart_toEndOf="@id/imageViewAddress"
                    app:layout_constraintTop_toTopOf="@id/imageViewAddress" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewEmail"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="@id/textViewPatientName"
                    app:layout_constraintTop_toBottomOf="@id/textViewPickupFromAddress"
                    app:srcCompat="@drawable/ic_email" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewEmail"
                    style="@style/TextView.Regular.sp_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_11"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="abc@gmail.com"
                    android:textColor="@color/gray2"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewEmail"
                    app:layout_constraintEnd_toEndOf="@+id/textViewPatientName"
                    app:layout_constraintStart_toEndOf="@id/imageViewEmail"
                    app:layout_constraintTop_toTopOf="@id/imageViewEmail" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewPhone"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:adjustViewBounds="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/dp_20"
                    app:layout_constraintStart_toStartOf="@id/textViewPatientName"
                    app:layout_constraintTop_toBottomOf="@id/imageViewEmail"
                    app:srcCompat="@drawable/ic_phone" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewContact"
                    style="@style/TextView.Regular.sp_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="+91 1234567890"
                    android:textColor="@color/gray2"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewPhone"
                    app:layout_constraintEnd_toEndOf="@+id/textViewPatientName"
                    app:layout_constraintStart_toEndOf="@id/imageViewPhone"
                    app:layout_constraintTop_toTopOf="@id/imageViewPhone" />

                <!--Old UI-->
                <!--<View
                    android:id="@+id/viewLine"
                    style="@style/viewLine"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/dp_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageViewPhone" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelAppointment"
                    style="@style/TextView.Regular.sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintEnd_toStartOf="@id/textViewValueAppointmentDate"
                    android:text="@string/labtest_order_review_label_appointment"
                    android:textColor="@color/gray2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewLine" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewValueAppointmentDate"
                    style="@style/TextView.Bold.sp_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="May 23,2023"
                    android:textColor="@color/textBlack1"
                    app:layout_constraintBottom_toBottomOf="@id/textViewLabelAppointment"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textViewLabelAppointment"
                    app:layout_constraintTop_toTopOf="@id/textViewLabelAppointment" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelTime"
                    style="@style/TextView.Regular.sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_20"
                    app:layout_constraintEnd_toStartOf="@id/textViewValueTime"
                    android:text="@string/labtest_order_review_label_time"
                    android:textColor="@color/gray2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewValueAppointmentDate" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewValueTime"
                    style="@style/TextView.Bold.sp_13"
                    android:layout_width="331dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="@dimen/dp_8"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/textBlack1"
                    app:layout_constraintBottom_toBottomOf="@id/textViewLabelTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textViewLabelTime"
                    app:layout_constraintTop_toTopOf="@id/textViewLabelTime"
                    tools:text="8:00-9:00 PM" />-->
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelSampleCollection"
                style="@style/TextView.Bold.sp_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:text="Sample Collection Details"
                android:textColor="@color/textBlack9"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/layoutOrderSummary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutSampleCollection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelSampleCollection"
                android:layout_marginTop="@dimen/dp_12"
                android:elevation="@dimen/dp_2"
                android:background="@drawable/bg_common_rounded_rect_12"
                android:backgroundTint="@color/white">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewAppointment"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginStart="@dimen/dp_12"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_schedule_appointment" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewSampleCollectionDate"
                    style="@style/TextView.Regular.sp_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Thursday, 23 May, 2023"
                    android:layout_marginStart="@dimen/dp_8"
                    android:textColor="@color/textBlack7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageViewAppointment"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewAppointment"
                    app:layout_constraintTop_toTopOf="@id/imageViewAppointment" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewScheduleTime"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_12"
                    app:layout_constraintDimensionRatio="1"
                    android:layout_marginBottom="@dimen/dp_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/imageViewAppointment"
                    app:layout_constraintTop_toBottomOf="@id/imageViewAppointment"
                    app:srcCompat="@drawable/ic_schedule_time" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewSampleCollectionTime"
                    style="@style/TextView.Regular.sp_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Morning, 06:30 - 08:30 AM"
                    android:layout_marginStart="@dimen/dp_8"
                    android:textColor="@color/textBlack7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageViewScheduleTime"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewScheduleTime"
                    app:layout_constraintTop_toTopOf="@id/imageViewScheduleTime" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelTestDetails"
                style="@style/TextView.Bold.sp_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:text="@string/labtest_order_review_label_test_details"
                android:textColor="@color/textBlack9"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/layoutSampleCollection"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTestDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_common_rounded_rect_12"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:elevation="@dimen/dp_2"
                android:padding="@dimen/dp_1"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelTestDetails"
                tools:itemCount="3"
                tools:listitem="@layout/labtest_row_order_review_test" />

            <androidx.constraintlayout.widget.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/groupCouponCode"
                app:constraint_referenced_ids="textViewLabelOfferPromotions,layoutOfferPromotions"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelOfferPromotions"
                style="@style/TextView.Bold.sp_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:text="Offers &amp; Promotions"
                android:textColor="@color/textBlack9"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewTestDetails" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutOfferPromotions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/bg_coupon_code_gray_stroke_rect_12"
            android:elevation="@dimen/dp_2"
            app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
            app:layout_constraintStart_toStartOf="@id/guideLineStart"
            app:layout_constraintTop_toBottomOf="@id/textViewLabelOfferPromotions">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewCouponCodeApplied"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_14"
                android:src="@drawable/ic_success_payment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewCouponCodeName"
                style="@style/TextView.SemiBold.sp_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_13"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="‘FIRSTORDER’ applied"
                android:textColor="@color/textBlack9"
                app:layout_constraintBottom_toBottomOf="@id/imageViewCouponCodeApplied"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageViewCouponCodeApplied"
                app:layout_constraintTop_toTopOf="@id/imageViewCouponCodeApplied" />

        </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelBilling"
                style="@style/TextView.Bold.sp_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="@string/labtest_order_review_label_billing"
                android:textColor="@color/textBlack9"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/layoutOfferPromotions"/>

            <include
                android:id="@+id/layoutDiscountBilling"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/layout_width_0dp"
                layout="@layout/common_layout_labtest_billing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelBilling" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutBilling"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:elevation="@dimen/dp_2"
                android:visibility="gone"
                android:background="@drawable/bg_common_rounded_rect_12"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelBilling">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layoutTotalAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewLabelTotalAmount"
                        style="@style/TextView.Regular.sp_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.8"
                        android:text="@string/labtest_order_details_label_total_amount"
                        android:textColor="@color/gray2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewItemTotalOld"
                        style="@style/TextView.Regular.sp_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:foreground="@drawable/line_strike_through"
                        android:textColor="@color/textBlack1"
                        tools:text="₹700" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewItemTotalNew"
                        style="@style/TextView.Medium.sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Free"
                        android:textColor="@color/gray9" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layoutHomeCollectionCharges"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_8"
                    app:layout_constraintEnd_toEndOf="@id/layoutTotalAmount"
                    app:layout_constraintStart_toStartOf="@id/layoutTotalAmount"
                    app:layout_constraintTop_toBottomOf="@id/layoutTotalAmount">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewLabelHomeCollectionCharges"
                        style="@style/TextView.Regular.sp_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.8"
                        android:text="@string/labtest_order_details_label_home_collection_charges"
                        android:textColor="@color/gray2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewHomeCollectionChargeOld"
                        style="@style/TextView.Regular.sp_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:foreground="@drawable/line_strike_through"
                        android:textColor="@color/textBlack1"
                        tools:text="₹250.0" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewHomeCollectionChargeNew"
                        style="@style/TextView.Medium.sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Free"
                        android:textColor="@color/gray9" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layoutServiceCharge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    app:layout_constraintEnd_toEndOf="@id/layoutTotalAmount"
                    app:layout_constraintStart_toStartOf="@id/layoutTotalAmount"
                    app:layout_constraintTop_toBottomOf="@id/layoutHomeCollectionCharges">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewLabelServiceCharge"
                        style="@style/TextView.Regular.sp_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.8"
                        android:text="@string/labtest_order_details_label_service_charge"
                        android:textColor="@color/gray2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewServiceCharge"
                        style="@style/TextView.Medium.sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Free"
                        android:textColor="@color/gray9" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:id="@+id/viewLine3"
                    style="@style/viewLine"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutServiceCharge" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layoutAmountToPaid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewLine3">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewLabelAmountToPaid"
                        style="@style/TextView.SemiBold.sp_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/labtest_order_details_label_amount_to_be_paid"
                        android:textColor="@color/textBlack1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewAmountPayable"
                        style="@style/TextView.SemiBold.sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_14"
                        android:text="Free"
                        android:textColor="@color/textBlack1" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBoxAgreeTerms"
                style="@style/checkBox"
                android:button="@drawable/selector_ic_checkbox_new"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
