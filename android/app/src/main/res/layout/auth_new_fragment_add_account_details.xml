<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/auth_common_header_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTitle"
                style="@style/TextView.SemiBold.sp_18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/screen_space"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:text="Almost there!"
                android:textAlignment="gravity"
                android:textColor="@color/textBlack1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewMessage"
                style="@style/TextView.Regular.sp_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="Help us with your details so that we can set up the app for you"
                android:textAlignment="gravity"
                android:textColor="@color/textBlack4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewMessage"
                app:srcCompat="@drawable/bg_rounded_top" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layoutAddDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/screen_space"
                android:layout_marginTop="@dimen/dp_36"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewMessage">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewLabelFirstName"
                        style="@style/TextView.Medium.sp_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="First Name *"
                        android:textColor="@color/textBlack1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewLabelLastName"
                        style="@style/TextView.Medium.sp_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_weight="0.5"
                        android:text="Last Name *"
                        android:textColor="@color/textBlack1" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextFirstName"
                        style="@style/editTextStroke"
                        android:layout_width="0dp"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_weight="1"
                        android:digits="@string/AZ_az_dot_single_coat"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="1" />
                    <!--android:hint="@string/add_account_hint_first_name"-->

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextLastName"
                        style="@style/editTextStroke"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:digits="@string/AZ_az_dot_single_coat"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="1" />
                    <!--android:hint="@string/add_account_hint_last_name"-->

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelGender"
                    style="@style/TextView.Medium.sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/add_account_label_gender"
                    android:textColor="@color/textBlack1" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioMale"
                        style="@style/radioAddressType"
                        android:checked="true"
                        android:text="@string/add_patient_label_male" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioFemale"
                        style="@style/radioAddressType"
                        android:layout_marginStart="@dimen/dp_16"
                        android:text="@string/add_patient_label_female" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioOther"
                        style="@style/radioAddressType"
                        android:text="@string/add_patient_label_other"
                        android:visibility="gone" />

                </RadioGroup>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelDOB"
                    style="@style/TextView.Medium.sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/add_account_label_date_of_birth"
                    android:textColor="@color/textBlack1" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextDOB"
                    style="@style/editTextStroke"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:imeOptions="actionDone"
                    android:longClickable="false" />
                <!--android:hint="@string/add_account_hint_dd_mm_yyyy"-->

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/bg_edittext_gray_stroke"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_3"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioPatient"
                        style="@style/radioButton"
                        android:checked="true"
                        android:text="@string/add_account_radio_patient" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioCaregiver"
                        style="@style/radioButton"
                        android:text="@string/add_account_radio_caregiver"
                        android:visibility="gone" />

                </RadioGroup>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelEmail"
                    style="@style/TextView.Medium.sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="Email address *"
                    android:textColor="@color/textBlack1" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextEmail"
                    style="@style/editTextStroke"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress" />
                <!--android:hint="@string/add_account_hint_enter_your_email_id"-->

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelCondition"
                    style="@style/TextView.Medium.sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="Condition *"
                    android:textColor="@color/textBlack1" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextMedicalCondition"
                    style="@style/editTextStroke"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/ic_dropdown_gray"
                    android:focusable="false"
                    android:imeOptions="actionDone"
                    android:longClickable="false" />
                <!--android:hint="@string/add_account_hint_select_medical_condition"-->

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_100"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewAgreeTerms"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:background="?selectableItemBackgroundBorderless"
                        android:padding="@dimen/dp_2"
                        app:srcCompat="@drawable/selector_ic_checkbox" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/checkBoxAgreeTerms"
                        style="@style/checkBox"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_2"
                        android:button="@null"
                        android:paddingStart="@dimen/dp_4"
                        android:text="By signing up, you agree to our Terms &amp; Conditions and Privacy Policy"
                        tools:ignore="RtlSymmetry" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNext"
        style="@style/buttonSolid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_space"
        android:layout_marginBottom="@dimen/dp_20"
        android:enabled="true"
        android:text="@string/add_account_button_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>