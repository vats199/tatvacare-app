<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBilling"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/screen_space"
        android:background="@drawable/bg_common_rounded_rect_12"
        android:elevation="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutTotalAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelItemTotal"
                style="@style/TextView.Regular.sp_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:text="@string/labtest_billing_label_item_total"
                android:textColor="@color/gray9" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewItemTotal"
                style="@style/TextView.Regular.sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray9"
                tools:text="₹200" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutHomeCollectionCharges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/layoutTotalAmount"
            app:layout_constraintStart_toStartOf="@id/layoutTotalAmount"
            app:layout_constraintTop_toBottomOf="@id/layoutTotalAmount">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelHomeCollectionCharges"
                style="@style/TextView.Regular.sp_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:text="@string/labtest_billing_label_home_collection_charges"
                android:textColor="@color/gray2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewHomeCollectionCharge"
                style="@style/TextView.Regular.sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray9"
                tools:text="₹50" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutServiceCharge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="@id/layoutTotalAmount"
            app:layout_constraintStart_toStartOf="@id/layoutTotalAmount"
            app:layout_constraintTop_toBottomOf="@id/layoutHomeCollectionCharges">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelServiceCharge"
                style="@style/TextView.Regular.sp_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:text="@string/labtest_billing_label_service_charge"
                android:textColor="@color/gray2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewServiceCharge"
                style="@style/TextView.Regular.sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray9"
                tools:text="₹10" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutDiscountOnItems"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="@id/layoutTotalAmount"
            app:layout_constraintStart_toStartOf="@id/layoutTotalAmount"
            app:layout_constraintTop_toBottomOf="@id/layoutServiceCharge">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelDiscountOnItems"
                style="@style/TextView.Regular.sp_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:text="@string/labtest_billing_label_discount_on_items"
                android:textColor="@color/gray2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDiscountOnItems"
                style="@style/TextView.Regular.sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray9"
                tools:text="- ₹25" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutAppliedCouponPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="@id/layoutTotalAmount"
            app:layout_constraintStart_toStartOf="@id/layoutTotalAmount"
            app:layout_constraintTop_toBottomOf="@id/layoutDiscountOnItems">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelAppliedCoupon"
                style="@style/TextView.Regular.sp_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:text="@string/labtest_billing_label_applied_coupon"
                android:textColor="@color/gray2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewAppliedCouponPrice"
                style="@style/TextView.Regular.sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGreen1"
                tools:text="- ₹25" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/viewLine3"
            style="@style/viewLine"
            android:layout_width="0dp"
            android:layout_marginHorizontal="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutAppliedCouponPrice" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutAmountToPaid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine3">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelAmountToPaid"
                style="@style/TextView.SemiBold.sp_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/labtest_order_details_label_amount_to_be_paid"
                android:textColor="@color/textBlack9" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewAmountToBePaid"
                style="@style/TextView.SemiBold.sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_14"
                android:text="₹210"
                android:textColor="@color/textBlack9" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>