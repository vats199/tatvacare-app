<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_100"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/dp_10"
    android:background="@drawable/bg_rounded_rect_gray_stroke_10"
    android:padding="@dimen/dp_6">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewRemove"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_gravity="end"
        android:padding="@dimen/dp_2"
        app:srcCompat="@drawable/ic_cross_small" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextView.Bold.sp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDrugName"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:maxLines="1"
        android:textColor="@color/textBlack1"
        tools:text="Forglyn" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextView.Regular.sp_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:id="@+id/textViewDosage"
        android:layout_marginEnd="@dimen/dp_4"
        android:maxLines="1"
        android:layout_marginBottom="@dimen/dp_4"
        android:textColor="@color/textBlack1"
        tools:text="3 times a day" />


</androidx.appcompat.widget.LinearLayoutCompat>