<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:id="@+id/layoutLocation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray5"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/screen_space"
    android:paddingVertical="@dimen/dp_12"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextView.Regular.sp_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:drawableStart="@drawable/ic_location_gray_small"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:text="Sample Pick Up From"
        android:textColor="@color/textBlack1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLocation"
        style="@style/TextView.Medium.sp_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_weight="1"
        tools:text="401303 Mumbai"
        android:textColor="@color/colorPrimary" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewChangeLocation"
        style="@style/TextView.SemiBold.sp_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:text="Change"
        android:textColor="@color/colorPrimary" />

</androidx.appcompat.widget.LinearLayoutCompat>