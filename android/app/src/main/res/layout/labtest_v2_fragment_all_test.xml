<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_color"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_common_toolbar_with_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_screen_color"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <include
            android:id="@+id/layoutChangeLocation"
            layout="@layout/common_layout_change_location_v2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutSearchTest"
            style="@style/TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_space"
            android:layout_marginTop="@dimen/dp_12"
            app:hintEnabled="false"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutChangeLocation">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextSearchTest"
                style="@style/TextInputEditTextAllLabTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_9"
                android:drawableStart="@drawable/ic_location_search"
                android:hint="@string/labtest_all_test_hint_search_for_test"
                android:imeOptions="actionDone"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_14"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_5"
            android:fillViewport="true"
            android:visibility="visible"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@id/layoutViewCart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutSearchTest">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_screen_color">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutUploadPrescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/screen_space"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/bg_common_rounded_rect_12"
                    android:elevation="@dimen/dp_2"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/dp_15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewUploadPrescription"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginStart="@dimen/dp_5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_upload_prescription" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/layoutPrescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/imageViewArrowIcon"
                        app:layout_constraintStart_toEndOf="@id/imageViewUploadPrescription"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewLabelUploadPrescription"
                            style="@style/TextView.H5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/labtest_all_test_label_upload_prescription"
                            android:textColor="@color/textBlack9" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewLabelDescription"
                            style="@style/TextView.B4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/labtest_all_test_label_arrange_medicines"
                            android:textColor="@color/textGray7" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewArrowIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_next_arrow_black_new"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutFreeTest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/screen_space"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@drawable/bg_common_rounded_rect_12"
                    android:elevation="@dimen/dp_2"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:paddingVertical="@dimen/dp_15"
                    android:paddingHorizontal="@dimen/dp_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutUploadPrescription">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/layoutTestFreeOrNot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_12"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/textViewAddRemove"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewLabelFreeTestTitle"
                            style="@style/TextView.H5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/labtest_all_test_v2_label_free_test_for_U"
                            android:textColor="@color/textBlack9" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewLabelFreeTestMsg"
                            style="@style/TextView.B4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@string/labtest_all_test_v2_label_free_test_for_U_DESC"
                            android:textColor="@color/textGray6" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewViewFreeTests"
                            style="@style/TextView.H5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:text="@string/labtest_all_test_v2_label_view_free_tests"
                            android:textColor="@color/colorPrimary"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewAddRemove"
                        style="@style/TextView.H5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:text="@string/labtest_all_test_v2_label_add"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewNoData"
                    style="@style/textViewNoData"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutUploadPrescription"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewAllTests"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:clipToPadding="false"
                    android:elevation="@dimen/dp_2"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutFreeTest"
                    tools:itemCount="2"
                    tools:listitem="@layout/labtest_row_all_test_main" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutViewCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/dp_10"
            android:visibility="gone"
            android:animateLayoutChanges="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTotalTestAdded"
                style="@style/TextView.B3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_6"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="1 Test Added"
                android:textColor="@color/textBlack9"
                app:layout_constraintEnd_toEndOf="@id/textViewLabelViewDetails"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/buttonViewCart" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelViewDetails"
                style="@style/TextView.Bold.sp_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_9"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/labtest_all_test_label_view_details"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/buttonViewCart"
                app:layout_constraintStart_toStartOf="@id/textViewTotalTestAdded"
                app:layout_constraintTop_toBottomOf="@id/textViewTotalTestAdded" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonViewCart"
                style="@style/buttonSolidButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_space"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/screen_space"
                android:layout_marginBottom="@dimen/dp_8"
                android:paddingHorizontal="@dimen/dp_20"
                android:text="@string/labtest_all_test_button_view_cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewLabelViewDetails"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSearchTest"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_12"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:paddingBottom="@dimen/dp_30"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutSearchTest"
            tools:itemCount="10"
            tools:listitem="@layout/labtest_row_search_test" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>