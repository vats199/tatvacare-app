<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_common_toolbar_with_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewBgThemeColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:srcCompat="@drawable/bg_rounded_top" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextSearch"
        style="@style/editTextStroke"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/screen_space"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/screen_space"
        android:cursorVisible="false"
        android:drawableEnd="@drawable/ic_search"
        android:focusable="false"
        android:hint="@string/labtest_list_hint_search_for_tests_health_packages"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:longClickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_goneMarginTop="@dimen/dp_8" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextSearch">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelPopularTest"
                style="@style/TextView.SemiBold.sp_18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_space"
                android:layout_marginEnd="@dimen/screen_space"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/labtest_list_label_popular_tests"
                android:textColor="@color/textBlack1"
                app:layout_constraintEnd_toStartOf="@id/textViewViewAllPopularTest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewViewAllPopularTest"
                style="@style/TextView.SemiBold.sp_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_space"
                android:layout_marginEnd="@dimen/screen_space"
                android:text="@string/labtest_list_label_view_all_test"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/textViewLabelPopularTest"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textViewLabelPopularTest" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPopularTest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelPopularTest"
                app:spanCount="2"
                tools:itemCount="4"
                tools:listitem="@layout/labtest_row_tests" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layoutEasyWayToBookTest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/gray5"
                android:orientation="vertical"
                android:padding="@dimen/screen_space"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewPopularTest">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelEasyWay"
                    style="@style/TextView.SemiBold.sp_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/labtest_list_label_easy_way_to_book_a_test"
                    android:textColor="@color/textBlack1"
                    app:layout_constraintEnd_toStartOf="@id/textViewViewAllPopularTest"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editTextSearch" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewCallUs"
                    style="@style/TextView.SemiBold.sp_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/bg_common_rounded_rect_10"
                    android:backgroundTint="@color/purpleLight1"
                    android:drawableEnd="@drawable/ic_labtest_bg_call_us"
                    android:drawableTint="@color/white"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_10"
                    android:text="@string/labtest_list_label_call_us_to_book_a_test"
                    android:textColor="@color/white" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelPopularHealthPackages"
                style="@style/TextView.SemiBold.sp_18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_space"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/screen_space"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/labtest_list_label_popular_health_packages"
                android:textColor="@color/textBlack1"
                app:layout_constraintEnd_toStartOf="@id/textViewViewAllPopularTest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutEasyWayToBookTest" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewViewAllHealthPackages"
                style="@style/TextView.SemiBold.sp_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_space"
                android:layout_marginEnd="@dimen/screen_space"
                android:text="@string/labtest_list_label_view_all_packages"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/textViewLabelPopularHealthPackages"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textViewLabelPopularHealthPackages" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewHealthPackages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_16"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelPopularHealthPackages"
                app:spanCount="2"
                tools:itemCount="4"
                tools:listitem="@layout/labtest_row_tests" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>