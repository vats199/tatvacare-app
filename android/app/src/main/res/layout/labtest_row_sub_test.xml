<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewLabTest"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_all_lab_test" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLabTestTitle"
        style="@style/TextView.H5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginEnd="@dimen/dp_12"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Fitgen"
        android:textColor="@color/textBlack9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewLabTest"
        app:layout_constraintTop_toTopOf="@id/imageViewLabTest" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLabTestDescription"
        style="@style/TextView.B4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:text="Also known as Genetic Risk assessment for Obesity"
        android:textColor="@color/textGray7"
        app:layout_constraintEnd_toEndOf="@id/textViewLabTestTitle"
        app:layout_constraintStart_toStartOf="@id/textViewLabTestTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewLabTestTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTotalPriceNew"
        style="@style/TextView.H4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="₹1078"
        android:textColor="@color/textBlack9"
        app:layout_constraintEnd_toStartOf="@id/textViewPriceOld"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/textViewLabTestTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewLabTestDescription" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewPriceOld"
        style="@style/TextView.B4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:ellipsize="end"
        android:foreground="@drawable/line_strike_through_with_padding"
        android:maxLines="1"
        tools:text="₹2695"
        android:textColor="@color/textGray6"
        app:layout_constraintBottom_toBottomOf="@id/textViewTotalPriceNew"
        app:layout_constraintEnd_toStartOf="@id/textViewItemDiscount"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/textViewTotalPriceNew"
        app:layout_constraintTop_toTopOf="@id/textViewTotalPriceNew" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewItemDiscount"
        style="@style/TextView.H5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="40% off"
        android:textColor="@color/darkGreen1"
        app:layout_constraintBottom_toBottomOf="@id/textViewTotalPriceNew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/textViewPriceOld"
        app:layout_constraintTop_toTopOf="@id/textViewTotalPriceNew" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAddToCart"
        style="@style/buttonStrokeButton2"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_goneMarginBottom="@dimen/dp_16"
        app:layout_constraintVertical_bias="0"
        android:text="Add To Cart"
        app:layout_constraintBottom_toTopOf="@id/viewLine"
        app:layout_constraintEnd_toEndOf="@id/textViewLabTestTitle"
        app:layout_constraintStart_toStartOf="@id/textViewLabTestTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewTotalPriceNew" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAdded"
        style="@style/buttonStrokeButton2Black"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_goneMarginBottom="@dimen/dp_16"
        android:text="Added"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/viewLine"
        app:layout_constraintEnd_toEndOf="@id/textViewLabTestTitle"
        app:layout_constraintStart_toStartOf="@id/textViewLabTestTitle"
        app:layout_constraintTop_toBottomOf="@id/buttonAddToCart" />

    <View
        android:id="@+id/viewLine"
        style="@style/viewLineWidth0"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/textViewLabTestTitle"
        app:layout_constraintTop_toBottomOf="@id/buttonAdded" />


</androidx.constraintlayout.widget.ConstraintLayout>