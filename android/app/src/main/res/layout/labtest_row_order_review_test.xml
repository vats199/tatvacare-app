<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMyDevice"
    android:focusable="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewTest"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_16"
        app:srcCompat="@drawable/ic_labtest_heart"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLabelTestName"
        style="@style/TextView.H5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintEnd_toStartOf="@id/textViewTotalPrice"
        android:text="Test Name"
        android:textColor="@color/textBlack1"
        app:layout_constraintTop_toTopOf="@id/imageViewTest"
        app:layout_constraintBottom_toBottomOf="@id/imageViewTest"
        app:layout_goneMarginStart="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@id/imageViewTest" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTotalPrice"
        style="@style/TextView.B3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/dp_13"
        tools:text="â‚¹1078"
        android:textColor="@color/textGray6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageViewTest"
        app:layout_constraintBottom_toBottomOf="@id/imageViewTest"/>

    <View
        android:id="@+id/viewLine"
        style="@style/viewLine"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewTest" />

</androidx.constraintlayout.widget.ConstraintLayout>