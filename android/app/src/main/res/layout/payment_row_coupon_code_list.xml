<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutCoupon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:elevation="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_common_rounded_rect_12"
            android:layout_marginHorizontal="@dimen/screen_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewCoupon"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_16"
                app:srcCompat="@drawable/ic_coupon_apply"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewCouponTitle"
                style="@style/TextView.Medium.sp_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TATVAFIRST"
                android:textColor="@color/textBlack9"
                android:layout_marginStart="@dimen/dp_8"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintEnd_toStartOf="@id/textViewLabelApply"
                app:layout_constraintBottom_toBottomOf="@id/imageViewCoupon"
                app:layout_constraintStart_toEndOf="@id/imageViewCoupon"
                app:layout_constraintTop_toTopOf="@id/imageViewCoupon"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelApply"
                style="@style/TextView.SemiBold.sp_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:padding="@dimen/dp_5"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/dp_16"
                app:layout_constraintBottom_toBottomOf="@id/imageViewCoupon"
                app:layout_constraintStart_toEndOf="@id/textViewCouponTitle"
                app:layout_constraintTop_toTopOf="@id/imageViewCoupon"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewCouponDescription"
                style="@style/TextView.Regular.sp_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Get 20% off when you pay using Paytm"
                android:textColor="@color/gray9"
                android:layout_marginTop="@dimen/dp_5"
                app:layout_constraintStart_toStartOf="@id/textViewCouponTitle"
                app:layout_constraintTop_toBottomOf="@id/textViewCouponTitle"
                app:layout_constraintEnd_toEndOf="@id/textViewCouponTitle"/>

            <View
                android:id="@+id/viewLine"
                style="@style/viewLineWidth0"
                android:layout_width="0dp"
                android:layout_marginHorizontal="@dimen/screen_space"
                android:layout_marginTop="@dimen/dp_9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewCouponDescription"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelOrderDiscount"
                style="@style/TextView.Light.sp_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Maximum discount upto â‚¹300 on your first order"
                android:textColor="@color/textGray7"
                android:layout_marginTop="@dimen/dp_9"
                app:layout_constraintStart_toStartOf="@id/imageViewCoupon"
                app:layout_constraintEnd_toEndOf="@id/textViewLabelApply"
                app:layout_constraintTop_toBottomOf="@id/viewLine" />

            <androidx.appcompat.widget.AppCompatCheckedTextView
                android:id="@+id/textViewViewDetailsMoreLess"
                style="@style/TextView.SemiBold.sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/selector_up_down_arrow"
                android:drawablePadding="@dimen/dp_4"
                android:paddingTop="@dimen/dp_4"
                android:textColor="@color/colorAccent"
                android:paddingBottom="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_5"
                android:text="View Details"
                app:layout_constraintStart_toStartOf="@id/imageViewCoupon"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelOrderDiscount" />

            <View
                android:id="@+id/viewLine2"
                style="@style/viewLineWidth0"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewViewDetailsMoreLess"/>

            <WebView
                android:id="@+id/webView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dp_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewLine2"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="WebViewLayout" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>