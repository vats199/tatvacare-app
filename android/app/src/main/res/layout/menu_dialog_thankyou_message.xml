<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/bg_common_rounded_rect_10"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dp_24">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLabelSuccess"
            style="@style/TextView.SemiBold.sp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="Thank you for your response our team will contact you soon !!"
            android:textAlignment="center"
            android:textColor="@color/textBlack1" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonContinue"
            style="@style/buttonSolid"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_20"
            android:text="Continue" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/dp_10"
        app:srcCompat="@drawable/ic_circle_cross" />

</FrameLayout>