<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_45"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewBadge"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_badges" />

    <FrameLayout
        android:id="@+id/layoutIndicator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_32"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewBadge">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewDone"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/sp_18"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_medication_done" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewProgress"
            style="@style/TextView.Medium.sp_8"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/sp_30"
            android:layout_gravity="center"
            android:background="@drawable/ic_medication_pending"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="90%"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            app:srcCompat="@drawable/ic_medication_done" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/viewLineStart"
        style="@style/viewLineWidth0"
        app:layout_constraintBottom_toBottomOf="@id/layoutIndicator"
        app:layout_constraintEnd_toStartOf="@id/layoutIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutIndicator" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/viewLineEnd"
        style="@style/viewLineWidth0"
        app:layout_constraintBottom_toBottomOf="@id/layoutIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/layoutIndicator"
        app:layout_constraintTop_toTopOf="@id/layoutIndicator" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTime"
        style="@style/TextView.Medium.sp_9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:alpha="0.7"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="JAN"
        android:textAlignment="gravity"
        android:textColor="@color/gray2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutIndicator" />

</androidx.constraintlayout.widget.ConstraintLayout>