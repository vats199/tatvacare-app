<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.activity.VideoActivity">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_common_toolbar_with_back"
        android:visibility="gone" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.VideoActivity">

        <include
            android:id="@+id/contentVideoView"
            layout="@layout/content_video" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLabelMuteStatus"
            style="@style/TextView.Medium.sp_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_80"
            android:background="@drawable/bg_common_rounded_rect_8_transparent"
            android:backgroundTint="@color/textBlack1"
            android:ellipsize="end"
            android:maxLines="10"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:text="John doe muted the call"
            android:textColor="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layoutAction"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/bg_common_rounded_rect_7"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/dp_8">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/muteActionFab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/selector_mute_unmute" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/localVideoActionFab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/selector_video_on_off" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/switchCameraActionFab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_switch_camera" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewEnd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_end_call" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/connectActionFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:src="@drawable/ic_back"
                android:visibility="gone"
                app:fabSize="normal" />

        </LinearLayout>

