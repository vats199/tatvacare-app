<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBcpTest"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="@dimen/screen_space"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dp_5"
    android:background="@drawable/bg_common_rounded_rect_10"
    android:elevation="@dimen/dp_2">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkBoxBcpTest"
        style="@style/checkBox"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17"
        android:paddingStart="@dimen/dp_10"
        android:text="@string/labtest_cart_v1_label_bcp_test"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBcpTest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:clipToPadding="false"
        android:elevation="@dimen/dp_1"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkBoxBcpTest"
        tools:itemCount="2"
        tools:listitem="@layout/labtest_row_cart_test_v1" />

</androidx.constraintlayout.widget.ConstraintLayout>