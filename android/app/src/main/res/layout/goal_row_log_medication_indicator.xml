<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_74"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkBoxSelect"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/selector_medicine_tick_green"
        android:clickable="false"
        android:focusable="false"
        android:button="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/viewLineStart"
        style="@style/viewLineWidth0"
        app:layout_constraintBottom_toBottomOf="@id/checkBoxSelect"
        app:layout_constraintEnd_toStartOf="@id/checkBoxSelect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/checkBoxSelect" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/viewLineEnd"
        style="@style/viewLineWidth0"
        app:layout_constraintBottom_toBottomOf="@id/checkBoxSelect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkBoxSelect"
        app:layout_constraintTop_toTopOf="@id/checkBoxSelect" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:gravity="center"
        android:id="@+id/textViewTime"
        android:textAlignment="gravity"
        android:text="10:00 AM"
        app:layout_constraintTop_toBottomOf="@id/checkBoxSelect"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextView.Medium.sp_10"
        android:textColor="@color/gray2"/>

</androidx.constraintlayout.widget.ConstraintLayout>