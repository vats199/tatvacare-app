<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/viewLine"
        style="@style/viewLine"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!--<androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewHeader"
            style="@style/TextView.SemiBold.sp_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_space"
            android:layout_weight="0.4"
            android:text="Features"
            android:textColor="@color/gray2" />-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewFeatureTitle"
            style="@style/TextView.Medium.sp_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingVertical="@dimen/dp_12"
            android:paddingStart="@dimen/screen_space"
            android:paddingEnd="@dimen/dp_5"
            android:text="Features"
            android:textColor="@color/textBlack1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewFeature"
            style="@style/TextView.Regular.sp_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingVertical="@dimen/dp_4"
            android:paddingStart="@dimen/screen_space"
            android:paddingEnd="@dimen/dp_5"
            android:text="Features"
            android:textColor="@color/gray9"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            tools:background="@color/black"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/payment_row_plan_details_feature_content" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>