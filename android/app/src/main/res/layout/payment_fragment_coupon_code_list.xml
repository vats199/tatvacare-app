<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_color"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_common_toolbar_with_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/screen_space" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/screen_space" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutEnterCouponCode"
            style="@style/TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
            app:layout_constraintStart_toStartOf="@id/guideLineStart"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCouponCode"
                style="@style/TextInputEditTextEnterCouponCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/coupon_code_list_hint_enter_coupon_code"
                android:imeOptions="actionDone"
                android:maxLength="30"
                android:paddingTop="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_80"
                android:paddingBottom="@dimen/dp_14"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewApply"
            style="@style/TextView.SemiBold.sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:elevation="@dimen/dp_10"
            android:enabled="false"
            android:padding="@dimen/dp_10"
            android:text="Apply"
            android:textColor="@color/clr_selector_gray_purple_alpha"
            app:layout_constraintBottom_toBottomOf="@id/inputLayoutEnterCouponCode"
            app:layout_constraintEnd_toEndOf="@id/inputLayoutEnterCouponCode"
            app:layout_constraintTop_toTopOf="@id/inputLayoutEnterCouponCode" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLabelCouponForYou"
            style="@style/TextView.Bold.sp_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/coupon_code_list_label_setup_profile"
            android:textColor="@color/textBlack8"
            app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
            app:layout_constraintStart_toStartOf="@id/guideLineStart"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutEnterCouponCode" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewNoData"
            style="@style/textViewNoData"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_40"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textViewLabelCouponForYou"
            tools:listitem="@layout/payment_row_coupon_code_list"
            tools:text="No data found" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCouponForYou"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_5"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:paddingBottom="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewLabelCouponForYou"
            tools:itemCount="4"
            tools:listitem="@layout/payment_row_coupon_code_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>