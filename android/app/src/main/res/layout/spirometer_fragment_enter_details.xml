<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_common_toolbar_with_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/layoutSaveAndNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray1">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/screen_space" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/screen_space" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layoutContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideLineCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.6" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewLabelHeight"
                        style="@style/TextView.Medium.sp_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="Height *"
                        android:textColor="@color/textBlack1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextHeight"
                        style="@style/editTextStroke"
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:digits="@string/digit_0_to_9"
                        android:hint="@string/setup_height_weight_hint_enter_height"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="3"
                        app:layout_constraintEnd_toEndOf="@id/guideLineCenter"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewLabelHeight" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextHeightFeet"
                        style="@style/editTextStroke"
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:digits="@string/digit_0_to_9"
                        android:hint="@string/setup_height_weight_hint_enter_feet"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        app:layout_constraintEnd_toStartOf="@id/editTextHeightInches"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewLabelHeight" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextHeightInches"
                        style="@style/editTextStroke"
                        android:layout_width="0dp"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:digits="@string/digit_0_to_9"
                        android:hint="@string/setup_height_weight_hint_enter_inches"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2"
                        app:layout_constraintEnd_toEndOf="@id/guideLineCenter"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/editTextHeightFeet"
                        app:layout_constraintTop_toBottomOf="@id/textViewLabelHeight" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextHeightUnit"
                        style="@style/editTextStroke"
                        android:layout_width="0dp"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_12"
                        android:cursorVisible="false"
                        android:drawableEnd="@drawable/ic_dropdown_gray"
                        android:focusable="false"
                        android:hint="@string/setup_height_weight_hint_select_goal_days"
                        android:imeOptions="actionDone"
                        android:longClickable="false"
                        android:maxLines="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideLineCenter"
                        app:layout_constraintTop_toBottomOf="@id/textViewLabelHeight" />

                    <!--groupHeightFeetInchesEditText : group of height feet/inches editTexts-->
                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/groupHeightFeetInchesEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:constraint_referenced_ids="editTextHeightFeet,editTextHeightInches" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewLabelWeight"
                        style="@style/TextView.Medium.sp_14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="Weight *"
                        android:textColor="@color/textBlack1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editTextHeightUnit" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextWeight"
                        style="@style/editTextStroke"
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:hint="@string/setup_height_weight_label_enter_weight"
                        android:longClickable="false"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        app:layout_constraintEnd_toEndOf="@id/guideLineCenter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewLabelWeight" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextWeightUnit"
                        style="@style/editTextStroke"
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:cursorVisible="false"
                        android:drawableEnd="@drawable/ic_dropdown_gray"
                        android:focusable="false"
                        android:hint="@string/setup_height_weight_hint_select_goal_days"
                        android:imeOptions="actionDone"
                        android:longClickable="false"
                        android:maxLines="1"
                        app:layout_constraintEnd_toEndOf="@id/editTextHeightUnit"
                        app:layout_constraintStart_toStartOf="@id/editTextHeightUnit"
                        app:layout_constraintTop_toBottomOf="@id/textViewLabelWeight" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelEthnicity"
                    style="@style/TextView.Medium.sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="Ethnicity *"
                    android:textColor="@color/textBlack1" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextEthnicity"
                    style="@style/editTextStroke"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_12"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/ic_dropdown_gray"
                    android:focusable="false"
                    android:hint="@string/add_patient_hint_select_relation"
                    android:imeOptions="actionDone"
                    android:longClickable="false" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelAge"
                    style="@style/TextView.Medium.sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="Age *"
                    android:textColor="@color/textBlack1" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextAge"
                    style="@style/editTextStroke"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_12"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:hint="@string/add_patient_hint_select_relation"
                    android:imeOptions="actionDone"
                    android:longClickable="false" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewBiologicalSex"
                    style="@style/TextView.Medium.sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="Biological Sex*"
                    android:textColor="@color/textBlack1" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioMale"
                        style="@style/radioGenderSpirometer"
                        android:checked="true"
                        android:focusable="false"
                        android:clickable="false"
                        android:text="@string/add_patient_label_male" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioFemale"
                        style="@style/radioGenderSpirometer"
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_marginStart="@dimen/dp_24"
                        android:text="@string/add_patient_label_female" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioOther"
                        style="@style/radioGenderSpirometer"
                        android:text="@string/add_patient_label_other"
                        android:focusable="false"
                        android:clickable="false"
                        android:visibility="gone" />

                </RadioGroup>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSaveAndNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSaveAndNext"
            style="@style/buttonSolid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_space"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/screen_space"
            android:layout_marginBottom="@dimen/dp_12"
            android:text="Save &amp; Next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>