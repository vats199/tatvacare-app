<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_170">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_117"
        android:layout_height="@dimen/dp_162"
        android:layout_margin="@dimen/dp_4"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTitle"
                style="@style/TextView.Medium.sp_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_marginEnd="@dimen/dp_8"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dp_2"
                android:lines="2"
                android:maxLines="2"
                android:text="Complete Blood Count (CBC)"
                android:textColor="@color/textBlack1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDescription"
                style="@style/TextView.Regular.sp_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:alpha="0.8"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dp_2"
                android:lines="2"
                android:maxLines="2"
                android:text="Complete Blood Count (CBC)"
                android:textColor="@color/textBlack1"
                app:layout_constraintEnd_toEndOf="@id/textViewTitle"
                app:layout_constraintStart_toStartOf="@id/textViewTitle"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layoutPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/textViewTitle"
                app:layout_constraintTop_toBottomOf="@id/textViewDescription"
                app:layout_constraintWidth_percent="0.45">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPriceOld"
                    style="@style/TextView.Regular.sp_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:ellipsize="end"
                    android:foreground="@drawable/line_strike_through"
                    android:maxLines="1"
                    android:text="700"
                    android:textColor="@color/textBlack1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPriceNew"
                    style="@style/TextView.SemiBold.sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="â‚¹700"
                    android:textColor="@color/textBlack1" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewIcon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4"
                android:scaleType="fitEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/layoutPrice"
                app:layout_constraintTop_toBottomOf="@id/textViewDescription"
                app:srcCompat="@drawable/ic_dummy_test_offer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDiscount"
        style="@style/TextView.SemiBold.sp_9"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_34"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingEnd="@dimen/dp_6"
        android:paddingStart="@dimen/dp_4"
        android:background="@drawable/ic_test_offer_discount"
        android:elevation="@dimen/dp_3"
        android:ellipsize="end"
        android:gravity="center_horizontal|top"
        android:textAlignment="gravity"
        android:textColor="@color/textBlack1"
        android:backgroundTint="@color/yellow1"
        android:maxLines="2"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_3"
        android:text="50%\nOff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewBadge"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_34"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_2"
        android:adjustViewBounds="true"
        android:elevation="@dimen/dp_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_badge_best_value" />-->


</androidx.constraintlayout.widget.ConstraintLayout>