<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_96"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_10"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="@dimen/dp_96"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewPrescription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_78"
            android:layout_gravity="end"
            android:background="@drawable/bg_common_rounded_rect_5"
            android:backgroundTint="@color/lightGray"
            android:padding="@dimen/dp_2" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewPdf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_78"
            android:layout_gravity="end"
            android:background="@drawable/bg_common_rounded_rect_5"
            android:backgroundTint="@color/lightGray"
            android:padding="@dimen/dp_16"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_pdf" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewPrescriptionName"
            style="@style/TextView.Medium.sp_11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:maxLines="1"
            android:textColor="@color/textBlack1"
            android:visibility="gone"
            tools:text="Prescription name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewDate"
            style="@style/TextView.Regular.sp_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:maxLines="1"
            android:textColor="@color/textBlack1"
            android:visibility="gone"
            tools:text="Aug 02, 2021" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewRemove"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_gravity="end"
        android:layout_margin="@dimen/dp_4"
        app:srcCompat="@drawable/ic_circle_cross" />
</FrameLayout>