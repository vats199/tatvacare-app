<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_common_rounded_rect_12"
    android:layout_marginHorizontal="@dimen/screen_space"
    android:layout_marginVertical="@dimen/dp_6"
    android:paddingVertical="@dimen/dp_11"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_14"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewIconLocation"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_address_new"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextView.Regular.sp_14"
        android:textColor="@color/textBlack9"
        android:lineSpacingExtra="@dimen/dp_3"
        android:maxLines="1"
        android:paddingVertical="@dimen/dp_3"
        app:layout_constraintStart_toEndOf="@id/imageViewIconLocation"
        app:layout_constraintEnd_toStartOf="@id/imageViewMore"
        app:layout_constraintTop_toTopOf="@id/imageViewIconLocation"
        app:layout_goneMarginBottom="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_12"
        tools:text="Home"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewGenderAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextView.Regular.sp_12"
        android:textColor="@color/textGray7"
        android:lineSpacingExtra="@dimen/dp_3"
        android:paddingVertical="@dimen/dp_3"
        app:layout_constraintStart_toEndOf="@id/imageViewIconLocation"
        app:layout_constraintEnd_toStartOf="@id/imageViewMore"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_goneMarginBottom="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_12"
        tools:text="Gender | Age"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextView.Regular.sp_12"
        android:textColor="@color/textGray7"
        android:lineSpacingExtra="@dimen/dp_3"
        android:paddingVertical="@dimen/dp_3"
        app:layout_constraintStart_toEndOf="@id/imageViewIconLocation"
        app:layout_constraintEnd_toStartOf="@id/imageViewMore"
        app:layout_constraintTop_toBottomOf="@id/textViewGenderAge"
        app:layout_goneMarginBottom="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_12"
        tools:text="Email Address"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewMore"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@id/textViewTitle"
        android:src="@drawable/ic_more_three_dot"
        android:padding="@dimen/dp_4"
        android:visibility="gone"
        android:tint="@color/clr_selector_light_gray_purpal"
        />

    <!--<View
        android:id="@+id/viewLine1"
        style="@style/viewLine"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        />-->

</androidx.constraintlayout.widget.ConstraintLayout>
