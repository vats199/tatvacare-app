<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_color"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_common_toolbar_with_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/background_default"
        app:layout_constraintBottom_toTopOf="@id/layoutSaveAndNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_screen_color">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/screen_space" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/screen_space" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layoutContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelAddressDisclaimer"
                    style="@style/TextView.Regular.sp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_12"
                    android:background="@drawable/bg_common_gray_stroke_rect_20"
                    android:text="@string/payment_header_label_disclaimer"
                    android:textColor="@color/gray9" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelPinCode"
                    style="@style/TextView.Medium.sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/payment_header_label_pincode"
                    android:textColor="@color/textBlack7" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextPinCode"
                    style="@style/editTextStroke"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_8"
                    android:hint="@string/labtest_add_address_hint_enter_pin_code"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="6"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelHouseNumberBuilding"
                    style="@style/TextView.Medium.sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="Full Address *"
                    android:textColor="@color/textBlack7" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextHouseNumberBuilding"
                    style="@style/editTextStroke"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_8"
                    android:hint="@string/labtest_add_address_hint_enter_house_no"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelValidation"
                    style="@style/TextView.Medium.sp_11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:alpha="0.5"
                    android:text="Minimum 25 characters required"
                    android:textColor="@color/textGray6" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelStreetName"
                    style="@style/TextView.Medium.sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/labtest_add_address_label_street_name"
                    android:textColor="@color/textBlack7" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextStreetName"
                    style="@style/editTextStroke"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_8"
                    android:hint="@string/labtest_add_address_hint_enter_street_name"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewLabelAddressType"
                    style="@style/TextView.Medium.sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/labtest_add_address_label_address_type"
                    android:textColor="@color/textBlack7" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioHome"
                        style="@style/radioAddressTypeCheckBox"
                        android:checked="true"
                        android:drawableStart="@drawable/selector_ic_checkbox_bold_border"
                        android:text="@string/labtest_add_address_label_home" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioWork"
                        style="@style/radioAddressTypeCheckBox"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:drawableStart="@drawable/selector_ic_checkbox_bold_border"
                        android:text="@string/labtest_add_address_label_work" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radioOther"
                        style="@style/radioAddressTypeCheckBox"
                        android:drawableStart="@drawable/selector_ic_checkbox_bold_border"
                        android:text="@string/labtest_add_address_label_other" />

                </RadioGroup>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSaveAndNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSaveNext"
            style="@style/buttonSolidWithCorner16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_space"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/screen_space"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="@string/payment_buttom_save_and_next"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>