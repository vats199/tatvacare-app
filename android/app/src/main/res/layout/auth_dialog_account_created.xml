<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_30"
    android:background="@drawable/bg_common_rounded_rect_10"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dp_28"
    tools:layout_marginEnd="@dimen/dp_30"
    tools:layout_marginStart="@dimen/dp_30">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLabelSuccess"
        style="@style/TextView.Bold.sp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_create_label_success"
        android:textColor="@color/textBlack1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSuccessMessage"
        style="@style/TextView.Medium.sp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_30"
        android:gravity="center"
        android:text="@string/account_create_label_your_account_has_been_successfully_created"
        android:textAlignment="gravity"
        android:textColor="@color/textBlack1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        app:srcCompat="@drawable/ic_account_create_success" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCreateProfile"
        style="@style/buttonSolid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginEnd="@dimen/dp_4"
        android:text="@string/account_create_button_create_profile_now"
        app:layout_constraintEnd_toEndOf="@id/textViewLabelLoginWith"
        app:layout_constraintStart_toStartOf="@id/textViewLabelLoginWith"
        app:layout_constraintTop_toBottomOf="@id/checkBoxAgreeTerms" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewGoToHome"
        style="@style/TextView.Medium.sp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:background="?selectableItemBackground"
        android:padding="@dimen/dp_4"
        android:text="@string/account_create_label_go_to_home_page"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewLabelDontHaveAccSignUp"
        app:layout_constraintTop_toTopOf="@id/textViewLabelDontHaveAccSignUp" />

</androidx.appcompat.widget.LinearLayoutCompat>