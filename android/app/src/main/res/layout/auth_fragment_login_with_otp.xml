        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader"
            app:srcCompat="@drawable/bg_rounded_top" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLabelLoginWith"
            style="@style/TextView.Bold.sp_20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_space"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/screen_space"
            android:text="@string/login_label_login_with_otp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutMobileNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_edittext_gray_stroke"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/textViewLabelLoginWith"
            app:layout_constraintStart_toStartOf="@id/textViewLabelLoginWith"
            app:layout_constraintTop_toBottomOf="@id/textViewLabelLoginWith">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/EditText.Medium.sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:text="+91"
                android:textColor="@color/textBlack1" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextMobileNumber"
                style="@style/editTextStroke"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/login_hint_mobile_number"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonNext"
            style="@style/buttonSolid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/login_button_next"
            app:layout_constraintEnd_toEndOf="@id/textViewLabelLoginWith"
            app:layout_constraintStart_toStartOf="@id/textViewLabelLoginWith"
            app:layout_constraintTop_toBottomOf="@id/layoutMobileNumber" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/viewLineLeft"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_half"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@color/grayDivider"
            android:layerType="software"
            app:layout_constraintBottom_toBottomOf="@id/textViewLabelOr"
            app:layout_constraintEnd_toStartOf="@id/textViewLabelOr"
            app:layout_constraintStart_toStartOf="@id/textViewLabelLoginWith"
            app:layout_constraintTop_toTopOf="@id/textViewLabelOr" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLabelOr"
            style="@style/TextView.Bold.sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/login_label_or"
            android:textColor="@color/textBlack1"
            app:layout_constraintEnd_toEndOf="@id/textViewLabelLoginWith"
            app:layout_constraintStart_toStartOf="@id/textViewLabelLoginWith"
            app:layout_constraintTop_toBottomOf="@id/buttonNext" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/viewLineRight"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_half"
            android:layout_marginStart="@dimen/dp_16"
            android:background="@color/grayDivider"
            android:layerType="software"
            app:layout_constraintBottom_toBottomOf="@id/textViewLabelOr"
            app:layout_constraintEnd_toEndOf="@id/textViewLabelLoginWith"
            app:layout_constraintStart_toEndOf="@id/textViewLabelOr"
            app:layout_constraintTop_toTopOf="@id/textViewLabelOr" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buttonLoginWithPassword"
            style="@style/TextView.Medium.sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="@dimen/dp_4"
            android:text="@string/login_button_login_with_password"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@id/textViewLabelLoginWith"
            app:layout_constraintStart_toStartOf="@id/textViewLabelLoginWith"
            app:layout_constraintTop_toBottomOf="@id/textViewLabelOr" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupLoginWithPasswordOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="viewLineLeft,viewLineRight,textViewLabelOr,buttonLoginWithPassword" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLabelDontHaveAcc"
            style="@style/TextView.Medium.sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_40"
            android:text="@string/login_label_don_t_have_an_account"
            app:layout_constraintVertical_bias="0.2"
            android:textColor="@color/textBlack1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewSignUp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/textViewLabelLoginWith"
            app:layout_constraintTop_toBottomOf="@id/buttonLoginWithPassword" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSignUp"
            style="@style/TextView.Medium.sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="@string/login_label_sign_up"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewLabelDontHaveAcc"
            app:layout_constraintTop_toTopOf="@id/textViewLabelDontHaveAcc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>