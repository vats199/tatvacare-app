<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_common_toolbar_with_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/buttonNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/screen_space" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideLineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/screen_space" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelSetUpProfile"
                style="@style/TextView.Bold.sp_20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/setup_profile_label_setup_profile"
                android:textColor="@color/textBlack8"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutYourName"
                style="@style/TextInputLayoutAuth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelSetUpProfile">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextYourName"
                    style="@style/TextInputEditText.Name"
                    android:hint="@string/setup_profile_hint_your_name" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutYourEmail"
                style="@style/TextInputLayoutAuth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputLayoutYourName">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextYourEmail"
                    style="@style/TextInputEditText.Email"
                    android:hint="@string/setup_profile_hint_your_email"
                    android:importantForAutofill="no"
                    android:nextFocusForward="@id/editTextDOB" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutDOB"
                style="@style/TextInputLayoutAuth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/setup_profile_hint_dob"
                app:endIconDrawable="@drawable/ic_dropdown_bg_white"
                app:endIconMode="custom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputLayoutYourEmail">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextDOB"
                    style="@style/TextInputEditText.Date"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:longClickable="false" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelGender"
                style="@style/TextView.Bold.sp_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_28"
                android:text="@string/setup_profile_label_gender"
                android:textColor="@color/textBlack8"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/inputLayoutDOB" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/radioGroupGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@null"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelGender">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/radioButtonMale"
                    style="@style/CustomRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:layout_weight="1"
                    android:elevation="@dimen/dp_4"
                    android:paddingVertical="@dimen/dp_14">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/viewMale"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:adjustViewBounds="true"
                        app:layout_constraintBottom_toBottomOf="@id/textViewLabelMale"
                        app:layout_constraintEnd_toStartOf="@id/textViewLabelMale"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/textViewLabelMale"
                        app:srcCompat="@drawable/ic_gender_male"
                        app:tint="@color/clr_selector_black_gray" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewLabelMale"
                        style="@style/TextView.Bold.sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="@color/clr_selector_black_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/viewMale"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/radioButtonFemale"
                    style="@style/CustomRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_weight="1"
                    android:elevation="@dimen/dp_4"
                    android:paddingVertical="@dimen/dp_14">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/viewFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:adjustViewBounds="true"
                        app:layout_constraintBottom_toBottomOf="@id/textViewLabelFemale"
                        app:layout_constraintEnd_toStartOf="@id/textViewLabelFemale"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/textViewLabelFemale"
                        app:srcCompat="@drawable/ic_gender_female"
                        app:tint="@color/clr_selector_black_gray" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewLabelFemale"
                        style="@style/TextView.Bold.sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textColor="@color/clr_selector_black_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/viewFemale"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <!--<RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/dp_12"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelGender">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radioButtonMale"
                    style="@style/CustomRadioButton.GreenWhite"
                    android:layout_width="0dp"
                    android:checked="true"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:drawableStart="@drawable/ic_gender_male"
                    android:text="Male"
                    />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radioButtonFemale"
                    style="@style/CustomRadioButton.GreenWhite"
                    android:layout_width="0dp"
                    android:text="Female"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_6"
                    android:drawableStart="@drawable/ic_gender_female"
                    />
            </RadioGroup>-->

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupAccessCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="textViewLabelDoctorCode,inputLayoutDoctorAccessCode,imageViewScanner,textViewCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLabelDoctorCode"
                style="@style/TextView.Bold.sp_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:text="@string/setup_profile_label_doctor_access_code"
                android:textColor="@color/textBlack8"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/radioGroupGender" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutDoctorAccessCode"
                style="@style/TextInputLayoutAuth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:hint="@string/setup_profile_hint_enter_code"
                app:layout_constraintEnd_toStartOf="@id/imageViewScanner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelDoctorCode">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextDoctorAccessCode"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="textPassword|textNoSuggestions"
                    android:paddingEnd="@dimen/dp_80"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewCheck"
                style="@style/TextView.Bold.sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:elevation="@dimen/dp_10"
                android:enabled="false"
                android:padding="@dimen/dp_10"
                android:text="Check"
                android:textColor="@color/clr_selector_gray_alpha"
                android:translationZ="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="@id/imageViewScanner"
                app:layout_constraintEnd_toEndOf="@id/inputLayoutDoctorAccessCode"
                app:layout_constraintTop_toTopOf="@id/imageViewScanner" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewScanner"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/bg_common_rounded_rect_12_purple"
                android:padding="@dimen/dp_12"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintTop_toTopOf="@id/inputLayoutDoctorAccessCode"
                app:srcCompat="@drawable/ic_scanner_black"
                app:tint="@color/colorPrimary" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDoctorName"
                style="@style/TextView.Regular.sp_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:drawableStart="@drawable/ic_status_check_green"
                android:drawablePadding="@dimen/dp_3"
                android:gravity="center_vertical"
                android:textColor="@color/lightGreen2"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/inputLayoutDoctorAccessCode"
                app:layout_constraintVertical_bias="1"
                tools:text="Doctor Name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDontHaveAccessCode"
                style="@style/TextView.SemiBold.sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:drawablePadding="@dimen/dp_3"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/dp_4"
                android:text="Click here if you don't have a doctor code"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/textViewDoctorName"
                app:layout_constraintVertical_bias="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewIHaveAccessCode"
                style="@style/TextView.SemiBold.sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:drawablePadding="@dimen/dp_3"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/dp_4"
                android:text="If you have a Doctor code, click here"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/textViewDontHaveAccessCode"
                app:layout_constraintVertical_bias="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewHaveAccessCodeNote"
                style="@style/TextView.Regular.sp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_3"
                android:gravity="center_vertical"
                android:text="(Proceed without code if you don't have one. We will auto-assign a code)"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/textViewIHaveAccessCode"
                app:layout_constraintVertical_bias="1" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupIHaveAccessCodeLabels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="textViewHaveAccessCodeNote,textViewIHaveAccessCode"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBoxAgreeTerms"
                style="@style/checkBoxGray"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_16"
                android:includeFontPadding="false"
                android:maxWidth="@dimen/dp_24"
                android:maxHeight="@dimen/dp_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideLineStart"
                app:layout_constraintTop_toBottomOf="@id/textViewHaveAccessCodeNote"
                app:layout_constraintVertical_bias="0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTermCondition"
                style="@style/TextView.Regular.sp_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_2"
                android:text="@string/choose_condition_label_terms_conditions"
                android:textColor="@color/textGray6"
                app:layout_constraintEnd_toEndOf="@id/guideLineEnd"
                app:layout_constraintStart_toEndOf="@id/checkBoxAgreeTerms"
                app:layout_constraintTop_toTopOf="@id/checkBoxAgreeTerms" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNext"
        style="@style/buttonStrokeSmallRadius16"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/screen_space"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:enabled="false"
        android:paddingStart="@dimen/dp_24"
        android:paddingEnd="@dimen/dp_24"
        android:text="@string/setup_profile_button_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>