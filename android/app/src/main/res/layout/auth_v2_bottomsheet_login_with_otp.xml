<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_rounded_top_bottomsheet">

    <View
        android:id="@+id/viewHeader"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_bottom_sheet_handler"
        android:layout_marginTop="@dimen/dp_12"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTitle"
        style="@style/TextView.Bold.sp_24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_36"
        android:text="@string/login_label_login_title"
        android:textColor="@color/textBlack1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHeader"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMessage"
        style="@style/TextView.Regular.sp_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/login_label_login_description"
        android:textColor="@color/gray2"
        app:layout_constraintStart_toStartOf="@id/textViewTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintEnd_toEndOf="@id/textViewTitle"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layoutFlag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_purple_stroke_12"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginHorizontal="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewMessage"
        android:weightSum="1"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_16"
            android:adjustViewBounds="true"
            android:textColor="@color/textBlack1"
            app:srcCompat="@drawable/ic_flag_of_india"
            android:layout_weight="0.05"
            android:scaleType="center"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutLinearMobileNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginVertical="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_8"
            >
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/EditText.Medium.sp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_hint_mobile_number"
                android:textColor="@color/textGray6"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layoutMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/textViewTitle"
                app:layout_constraintStart_toEndOf="@id/layoutFlag"
                app:layout_constraintTop_toTopOf="@id/layoutFlag"
                app:layout_constraintBottom_toBottomOf="@id/layoutFlag"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_3"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextView.SemiBold.sp_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/login_label_country_code"
                    android:textColor="@color/textBlack1"
                    android:layout_weight="0.1"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextMobileNumber"
                    style="@style/editTextStrokeV1"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/sf_semi_bold"
                    android:layout_marginStart="@dimen/dp_7"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="10" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonContinue"
        style="@style/buttonSolidWithCorner16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginBottom="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_14"
        android:text="@string/login_button_continue"
        android:enabled="false"
        android:backgroundTint="@color/clr_selector_button_isenable_primary_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutFlag"
        />
</androidx.constraintlayout.widget.ConstraintLayout>