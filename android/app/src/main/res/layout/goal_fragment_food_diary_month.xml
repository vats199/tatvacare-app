<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewBgDiscover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/gray5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_rounded_top" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/materialCalender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:mcv_calendarMode="month"
                app:mcv_dateTextAppearance="@style/calenderDays"
                app:mcv_headerTextAppearance="@style/calenderMonths"
                app:mcv_leftArrow="@drawable/ic_cal_left_arrow"
                app:mcv_rightArrow="@drawable/ic_cal_right_arrow"
                app:mcv_showOtherDates="out_of_range"
                app:mcv_tileHeight="@dimen/dp_40"
                app:mcv_weekDayTextAppearance="@style/calenderWeeks" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layoutCalendarInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/materialCalender">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layoutInfoQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextView.SemiBold.sp_14"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:background="@drawable/bg_circle_white"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="center"
                        android:text="i"
                        android:textAlignment="gravity"
                        android:textColor="@color/white" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextView.Regular.sp_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_weight="1"
                        android:text="@string/food_diary_label_what_do_these_circles_mean"
                        android:textColor="@color/textBlack1" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewUpDown"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:padding="@dimen/dp_6"
                        android:rotation="0"
                        app:srcCompat="@drawable/ic_food_dropdown_small" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    style="@style/viewLine"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layoutCalendarInfoData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:visibility="gone">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:background="@drawable/bg_circle_white"
                            android:backgroundTint="@color/limitCalorie" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewLabelCaloriesWithinLimit"
                            style="@style/TextView.Regular.sp_13"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_14"
                            android:layout_weight="1"
                            android:text="Calories Within Limit"
                            android:textColor="@color/textBlack1" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:background="@drawable/bg_circle_white"
                            android:backgroundTint="@color/lessCalorie" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewLabelLessCalories"
                            style="@style/TextView.Regular.sp_13"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_14"
                            android:layout_weight="0.8"
                            android:text="Less Calories"
                            android:textColor="@color/textBlack1" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:background="@drawable/bg_circle_white"
                            android:backgroundTint="@color/excessCalorie" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewLabelExcessCalories"
                            style="@style/TextView.Regular.sp_13"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_14"
                            android:layout_weight="1"
                            android:text="Excess Calories"
                            android:textColor="@color/textBlack1" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>