<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layoutHeader"
            layout="@layout/auth_common_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader"
            app:srcCompat="@drawable/bg_rounded_top" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLabelSignUp"
            style="@style/TextView.Bold.sp_20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_space"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginEnd="@dimen/screen_space"
            android:text="@string/sign_up_phone_label_sign_up"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutMobileNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/bg_edittext_gray_stroke"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/textViewLabelSignUp"
            app:layout_constraintStart_toStartOf="@id/textViewLabelSignUp"
            app:layout_constraintTop_toBottomOf="@id/textViewLabelSignUp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/EditText.Medium.sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:text="+91"
                android:textColor="@color/textBlack1" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextMobileNumber"
                style="@style/editTextStroke"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:hint="@string/sign_up_phone_hint_verify_your_mobile_number"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                app:layout_constraintEnd_toEndOf="@id/textViewLabelSignUp"
                app:layout_constraintStart_toStartOf="@id/textViewLabelSignUp"
                app:layout_constraintTop_toBottomOf="@id/textViewLabelSignUp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonNext"
            style="@style/buttonSolid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:text="@string/sign_up_phone_button_next"
            app:layout_constraintEnd_toEndOf="@id/textViewLabelSignUp"
            app:layout_constraintStart_toStartOf="@id/textViewLabelSignUp"
            app:layout_constraintTop_toBottomOf="@id/layoutMobileNumber" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewAlreadyHaveAcc"
            style="@style/TextView.Medium.sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:text="@string/sign_up_phone_label_already_have_an_account"
            android:textColor="@color/textBlack1"
            app:layout_constraintEnd_toStartOf="@id/textViewSignIn"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/textViewLabelSignUp"
            app:layout_constraintTop_toBottomOf="@id/buttonNext" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSignIn"
            style="@style/TextView.Medium.sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="@string/sign_up_phone_label_sign_in"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewAlreadyHaveAcc"
            app:layout_constraintTop_toTopOf="@id/textViewAlreadyHaveAcc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>