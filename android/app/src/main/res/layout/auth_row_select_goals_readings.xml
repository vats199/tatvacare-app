<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    android:background="@drawable/bg_common_rounded_rect_5"
    android:elevation="@dimen/dp_3"
    android:padding="@dimen/dp_8">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewIconGoal"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@drawable/ic_pranayam" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewIconReading"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/bg_reading_icons_transparent_rounded"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/dp_6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@drawable/ic_pranayam" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkBoxSelectIcon"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_14"
        android:button="@drawable/selector_cb_circle"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@id/textViewGoalReading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewGoalReading" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewGoalReading"
        style="@style/TextView.Bold.sp_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_5"
        android:ellipsize="end"
        android:text="Pranayam"
        android:textColor="@color/textBlack1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/checkBoxSelectIcon"
        app:layout_constraintStart_toEndOf="@id/imageViewIconGoal"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>