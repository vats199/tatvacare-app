<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:id="@+id/layoutLocation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/screen_space"
    android:paddingVertical="@dimen/dp_12"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewChangeLocation"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_5"
        android:src="@drawable/ic_change_location"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLocation"
        style="@style/TextView.B4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:drawableEnd="@drawable/ic_dropdown_blue"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        tools:text="Mumbai (400060)"
        android:textColor="@color/gray9" />

</androidx.appcompat.widget.LinearLayoutCompat>