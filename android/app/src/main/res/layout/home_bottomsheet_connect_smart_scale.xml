<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_rounded_top_bottomsheet">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewConnectSmartScale"
        style="@style/TextView.SemiBold.sp_18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/connect_smart_scale_label_connect_device"
        android:textColor="@color/textBlack1"
        app:layout_constraintEnd_toStartOf="@id/imageViewClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewClose"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="end"
        android:background="@drawable/bg_circle_white"
        android:backgroundTint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_17"
        android:padding="@dimen/dp_6"
        app:srcCompat="@drawable/ic_cross_small" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLearnHowToConnect"
        style="@style/TextView.Medium.sp_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/connect_smart_scale_label_how_to_connect"
        android:textColor="@color/colorPrimary"
        android:drawablePadding="@dimen/dp_10"
        android:drawableEnd="@drawable/ic_next_arrow_purple"
        app:layout_constraintStart_toStartOf="@id/textViewConnectSmartScale"
        app:layout_constraintTop_toBottomOf="@id/textViewConnectSmartScale" />

    <View
        android:id="@+id/viewLine"
        style="@style/viewLine"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLearnHowToConnect"
        android:layout_marginTop="@dimen/dp_13"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewBluetooth"
        style="@style/TextView.SemiBold.sp_16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/connect_smart_scale_label_bluetooth"
        android:textColor="@color/textBlack1"
        app:layout_constraintTop_toBottomOf="@id/viewLine"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewLine"
        android:layout_marginEnd="@dimen/dp_19"
        android:checked="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:thumb="@drawable/bg_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        app:track="@drawable/bg_custom_track_bluetooth" />

    <View
        android:id="@+id/viewLine2"
        style="@style/viewLine"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/textViewBluetooth"
        android:layout_marginTop="@dimen/dp_17"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewStepUp"
        android:layout_width="@dimen/dp_125"
        android:layout_height="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewLine2"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_stepup" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewStepUpOnscale"
        style="@style/TextView.SemiBold.sp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:text="@string/connect_smart_scale_label_step_up"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:textColor="@color/textBlack1"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewStepUp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSearchDevice"
        style="@style/buttonSolid"
        android:layout_width="0dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_space"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginEnd="@dimen/screen_space"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="@string/connect_smart_scale_button_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewStepUpOnscale"/>

</androidx.constraintlayout.widget.ConstraintLayout>