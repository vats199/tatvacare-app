<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layoutHeader"
            layout="@layout/auth_common_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader"
            app:srcCompat="@drawable/bg_rounded_top" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLabelSelectLanguage"
            style="@style/TextView.Bold.sp_20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_space"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/screen_space"
            android:text="@string/set_language_label_select_your_preferred_language"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextLanguage"
            style="@style/editTextStroke"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/dp_24"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/ic_dropdown_gray"
            android:focusable="false"
            android:hint="@string/set_language_hint_language"
            android:longClickable="false"
            app:layout_constraintEnd_toEndOf="@id/textViewLabelSelectLanguage"
            app:layout_constraintStart_toStartOf="@id/textViewLabelSelectLanguage"
            app:layout_constraintTop_toBottomOf="@id/textViewLabelSelectLanguage" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSubmit"
            style="@style/buttonSolid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_40"
            android:text="@string/set_language_button_submit"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/textViewLabelSelectLanguage"
            app:layout_constraintStart_toStartOf="@id/textViewLabelSelectLanguage"
            app:layout_constraintTop_toBottomOf="@id/editTextLanguage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>