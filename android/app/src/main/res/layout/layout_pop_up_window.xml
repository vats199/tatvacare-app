<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_75"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewEditIcon"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_edit_pen" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewEditTitle"
            style="@style/TextView.Regular.sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_2"
            android:includeFontPadding="false"
            android:text="Edit"
            android:textColor="@color/textGray6"
            app:layout_constraintBottom_toBottomOf="@id/imageViewEditIcon"
            app:layout_constraintStart_toEndOf="@id/imageViewEditIcon"
            app:layout_constraintTop_toTopOf="@id/imageViewEditIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="#E0E0E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutEdit" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewLine">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewDeleteIcon"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_delete_gray" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewDeleteTitle"
            style="@style/TextView.Regular.sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_2"
            android:includeFontPadding="false"
            android:text="Delete"
            android:textColor="@color/textGray6"
            app:layout_constraintBottom_toBottomOf="@id/imageViewDeleteIcon"
            app:layout_constraintStart_toEndOf="@id/imageViewDeleteIcon"
            app:layout_constraintTop_toTopOf="@id/imageViewDeleteIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>