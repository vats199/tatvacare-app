<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewRoutineNo"
        style="@style/TextView.Medium.sp_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Routine 1"
        android:textColor="@color/textBlack1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRoutinesSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@id/textViewRoutineNo"
        tools:itemCount="2"
        tools:listitem="@layout/goal_row_log_exercise_routines_sub" />

</androidx.constraintlayout.widget.ConstraintLayout>