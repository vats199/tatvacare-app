<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_selector_choose_duration_v1"
        android:paddingHorizontal="@dimen/dp_14"
        android:paddingVertical="@dimen/dp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewRecommended">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTitle"
            style="@style/TextView.Regular.sp_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Complete Care - 6 Months"
            android:textColor="@color/textBlack7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewPriceNew"
            style="@style/TextView.SemiBold.sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="₹11, 499"
            android:textColor="@color/textBlack7"
            app:layout_constraintStart_toStartOf="@id/textViewTitle"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewPriceOld"
            style="@style/TextView.Light.sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:foreground="@drawable/line_strike_through"
            android:foregroundTint="@color/gray2"
            android:text="₹13,823"
            android:textColor="@color/gray2"
            app:layout_constraintBottom_toBottomOf="@id/textViewPriceNew"
            app:layout_constraintStart_toEndOf="@id/textViewPriceNew"
            app:layout_constraintTop_toTopOf="@id/textViewPriceNew" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewRecommended"
        style="@style/TextView.Bold.sp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:background="@drawable/bg_common_rounded_rect_7"
        android:backgroundTint="#77DD77"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingVertical="@dimen/dp_3"
        android:text="Recommended"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>