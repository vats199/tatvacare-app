<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewSearch"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_marginStart="@dimen/screen_space"
        android:background="@drawable/bg_circle_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSearchName"
        style="@style/TextView.B3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/screen_space"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@id/textViewSearchDescription"
        android:text="MRI Brain"
        android:textColor="@color/textBlack9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewSearch"
        app:layout_constraintTop_toTopOf="@id/imageViewSearch" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSearchDescription"
        style="@style/TextView.B4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/screen_space"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Related to Brain"
        android:textColor="@color/textGray6"
        app:layout_constraintBottom_toBottomOf="@id/imageViewSearch"
        app:layout_constraintEnd_toEndOf="@id/textViewSearchName"
        app:layout_constraintStart_toStartOf="@id/textViewSearchName"
        app:layout_constraintTop_toBottomOf="@id/textViewSearchName" />

</androidx.constraintlayout.widget.ConstraintLayout>