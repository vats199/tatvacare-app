<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/dp_6"
    android:layout_marginHorizontal="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_15"
    android:elevation="@dimen/dp_2"
    android:background="@drawable/bg_common_rounded_rect_10"
    android:paddingBottom="@dimen/dp_12">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLabelOrderId"
        style="@style/TextView.SemiBold.sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:text="Order ID:"
        android:textColor="@color/textBlack1"
        app:layout_constraintEnd_toStartOf="@id/textViewOrderNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_14"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewOrderNo"
        style="@style/TextView.Regular.sp_13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:text="ABC"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/gray2"
        app:layout_constraintEnd_toStartOf="@id/imageViewNext"
        app:layout_constraintBottom_toBottomOf="@id/textViewLabelOrderId"
        app:layout_constraintStart_toEndOf="@id/textViewLabelOrderId"
        app:layout_constraintTop_toTopOf="@id/textViewLabelOrderId" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewNext"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_marginEnd="@dimen/dp_14"
        android:elevation="@dimen/dp_2"
        android:padding="@dimen/dp_7"
        app:layout_constraintStart_toEndOf="@+id/textViewOrderNo"
        app:layout_constraintTop_toTopOf="@+id/textViewOrderNo"
        app:layout_constraintBottom_toBottomOf="@+id/textViewOrderNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_next_arrow_purple" />

    <View
        android:id="@+id/viewLine"
        style="@style/viewLine"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginHorizontal="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLabelOrderId" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCarePlanTitle"
        style="@style/TextView.Bold.sp_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Care Plans for Fatty Liver (NAFLD/NASH)"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/textViewLabelOrderId"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintTop_toBottomOf="@id/viewLine"
        android:layout_marginTop="@dimen/dp_12"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewUser"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintStart_toStartOf="@id/textViewLabelOrderId"
        app:layout_constraintTop_toBottomOf="@id/textViewCarePlanTitle"
        app:srcCompat="@drawable/ic_profile_track_order" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewPatientName"
        style="@style/TextView.Bold.sp_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:text="Name"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/imageViewStatusConfirmed"
        android:ellipsize="end"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/imageViewUser"
        app:layout_constraintStart_toEndOf="@id/imageViewUser"
        app:layout_constraintTop_toTopOf="@id/imageViewUser" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewStatusConfirmed"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_14"
        app:layout_constraintEnd_toStartOf="@id/textViewOrderConfirm"
        app:layout_constraintStart_toEndOf="@id/textViewPatientName"
        app:layout_constraintTop_toTopOf="@id/textViewPatientName"
        app:layout_constraintBottom_toBottomOf="@id/textViewPatientName"
        app:srcCompat="@drawable/ic_status_confirmed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewOrderConfirm"
        style="@style/TextView.Bold.sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="@id/imageViewNext"
        app:layout_constraintBottom_toBottomOf="@id/imageViewStatusConfirmed"
        app:layout_constraintStart_toEndOf="@id/imageViewStatusConfirmed"
        app:layout_constraintTop_toTopOf="@id/imageViewStatusConfirmed"
        android:layout_marginStart="@dimen/dp_5"
        android:text="Order Confirmed"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewPhone"
        android:layout_width="@dimen/dp_16"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@id/textViewLabelOrderId"
        app:layout_constraintTop_toBottomOf="@id/imageViewUser"
        app:srcCompat="@drawable/ic_phone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewContact"
        style="@style/TextView.Regular.sp_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:ellipsize="end"
        android:textColor="@color/gray2"
        android:maxLines="1"
        android:text="+91 1234567890"
        app:layout_constraintEnd_toEndOf="@+id/textViewPatientName"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPhone"
        app:layout_constraintStart_toEndOf="@id/imageViewPhone"
        app:layout_constraintTop_toTopOf="@id/imageViewPhone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLabelPurchasedOn"
        style="@style/TextView.Regular.sp_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray2"
        android:layout_marginTop="@dimen/dp_13"
        android:text="Purchased on :"
        app:layout_constraintEnd_toEndOf="@id/textViewOrderConfirm"
        app:layout_constraintTop_toBottomOf="@id/textViewOrderConfirm" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewPurchasedDate"
        style="@style/TextView.Bold.sp_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_9"
        android:text="18 March 2023"
        app:layout_constraintEnd_toEndOf="@id/textViewLabelPurchasedOn"
        app:layout_constraintTop_toBottomOf="@id/textViewLabelPurchasedOn" />

    <View
        android:id="@+id/viewLine1"
        style="@style/viewLine"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewPurchasedDate" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layoutAmountToPaid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintEnd_toEndOf="@+id/imageViewNext"
        app:layout_constraintStart_toStartOf="@id/textViewLabelOrderId"
        app:layout_constraintTop_toBottomOf="@id/viewLine1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLabelAmountToPaid"
            style="@style/TextView.Bold.sp_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amount Paid"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewAmountPayable"
            style="@style/TextView.Bold.sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="â‚¹ 1,999" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/viewLine2"
        style="@style/viewLine"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginHorizontal="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutAmountToPaid" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_7"
        app:layout_constraintTop_toBottomOf="@id/viewLine2"
        android:layout_marginTop="@dimen/dp_13"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonReorder"
            style="@style/buttonStrokeSmall"
            android:layout_width="0dp"
            android:enabled="true"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="Reorder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutAppointmentDateTime" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonViewInvoice"
            style="@style/buttonStrokeSmall"
            android:layout_width="0dp"
            android:enabled="true"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_theme_solid"
            android:layout_weight="1"
            android:text="View Invoice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutAppointmentDateTime"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>