<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_rounded_top_bottomsheet">

    <View
        android:id="@+id/viewHeader"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_bottom_sheet_handler"
        android:backgroundTint="@color/bg_light_indicator"
        android:layout_marginTop="@dimen/dp_12"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTestTitle"
        style="@style/TextView.SemiBold.sp_18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        tools:text="Title"
        android:textColor="@color/textBlack1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHeader"/>

    <View
        android:id="@+id/viewLine"
        style="@style/viewLine"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTestTitle"
        android:layout_marginTop="@dimen/dp_12"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutSelected"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:layout_constraintTop_toBottomOf="@id/viewLine"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@drawable/bg_rounded_rect_gray_stroke_12"
        app:tabTextAppearance="@style/MyTextAppearance16"
        app:tabTextColor="@color/textGray7"
        app:tabSelectedTextColor="@color/textBlack9"
        app:tabBackground="@drawable/selector_tab_with_strok_bg"
        app:tabIndicatorHeight="@dimen/layout_width_0dp"
        app:tabRippleColor="@android:color/transparent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutWheelPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutSelected"
        app:layout_constraintBottom_toTopOf="@id/layoutButtonBG"
        android:layout_marginVertical="@dimen/dp_10"
        app:layout_goneMarginTop="@dimen/dp_10"
        >
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wheelFeet"
            android:layout_width="@dimen/layout_width_0dp"
            android:layout_height="wrap_content"
            style="@style/wheelDatePicker"
            app:wheel_item_align="right"
            app:wheel_item_space="@dimen/dp_24"
            app:wheel_visible_item_count="5"
            app:wheel_selected_item_position="3"
            app:wheel_curved="true"
            app:wheel_curtain="false"
            app:wheel_indicator="false"
            app:wheel_atmospheric="true"
            android:layout_marginEnd="@dimen/dp_7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/wheelCM"
            app:layout_constraintHorizontal_chainStyle="packed"
            />
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wheelCM"
            android:layout_width="@dimen/layout_width_0dp"
            android:layout_height="wrap_content"
            style="@style/wheelDatePicker"
            app:wheel_item_space="@dimen/dp_24"
            app:wheel_item_align="left"
            app:wheel_visible_item_count="5"
            app:wheel_curtain="false"
            app:wheel_selected_item_position="3"
            app:wheel_curved="true"
            app:wheel_indicator="false"
            app:wheel_atmospheric="true"
            app:layout_constraintStart_toEndOf="@id/wheelFeet"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_indecator_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutWheelPicker"
        app:layout_constraintBottom_toBottomOf="@id/layoutWheelPicker"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_indecator_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutWheelPicker"
        app:layout_constraintBottom_toBottomOf="@id/layoutWheelPicker"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layoutButtonBG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="@dimen/dp_10"
        android:background="@color/white"
        android:elevation="@dimen/dp_12"
        android:translationZ="@dimen/dp_20"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSaveNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            style="@style/buttonSolidWithCorner16"
            android:text="Save"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
