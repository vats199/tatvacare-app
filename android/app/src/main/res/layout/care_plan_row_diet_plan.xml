<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingVertical="@dimen/dp_8"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewPlanTitle"
        style="@style/TextView.Medium.sp_13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Test Plan ABCD"
        app:layout_constraintEnd_toStartOf="@id/buttonDownload"
        android:textColor="@color/textBlack1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewValidDate"
        style="@style/TextView.Medium.sp_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:alpha="0.6"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Valid until 28th Feb 2023"
        android:textColor="@color/textBlack1"
        app:layout_constraintEnd_toEndOf="@id/textViewPlanTitle"
        app:layout_constraintStart_toStartOf="@id/textViewPlanTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewPlanTitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDownload"
        style="@style/buttonSolidSmall"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_12"
        android:textSize="@dimen/sp_12"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:text="Download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>