<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6">

        <androidx.appcompat.widget.AppCompatCheckedTextView
            style="@style/TextView.Medium.sp_16"
            android:layout_width="0dp"
            android:id="@+id/textViewItem"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_34"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_weight="1"
            android:text="Toast with butter"
            android:textColor="@color/textBlack1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewCalorie"
            style="@style/TextView.Medium.sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_4"
            android:alpha="0.5"
            android:text="175 cal"
            android:textColor="@color/textBlack1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_4"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/dp_6"
            app:srcCompat="@drawable/ic_edit_pencil" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatCheckedTextView
        style="@style/TextView.Medium.sp_16"
        android:id="@+id/textViewQty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_34"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_10"
        android:alpha="0.5"
        android:text="1 Slice"
        android:textColor="@color/textBlack1" />


</androidx.appcompat.widget.LinearLayoutCompat>